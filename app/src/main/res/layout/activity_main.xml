<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mahao.algorithmone.MainActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="btnClick"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_alg_rand"
            android:text="随机数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/edt_total_num"
            android:layout_toLeftOf="@+id/btn_alg_rand"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:hint="随机生成数字数字"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="btnClick"
            android:id="@+id/btn_alg_one"
            android:text="线性表的删除算法"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <Button
            android:text="删除第"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:hint="3"
            android:id="@+id/edt_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:text="个数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>






</LinearLayout>
